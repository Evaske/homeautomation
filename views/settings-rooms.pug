doctype html
html(lang="en")
  head
    title HomeAutomation - Room Settings
    link(rel='stylesheet', href='/css/style.css')
  body
    .wrapper
      include topbar.pug
      .content-wrapper
        include sidebar.pug
        .content
          h2 Rooms
          each room, i in rooms
            .socket(data-roomid=room.slug)
              img(src='/images/rooms.svg')
              .name #{room.name}
              img(src='/images/garbage.svg', class='delete', class='room-delete')
              a(href="/settings/rooms/edit/" + room.slug)
                img(src='/images/edit.svg', class='delete', class='room-edit')
          .input-wrapper
            a.add-room(href="/settings/rooms/add") Add Room


  script(src='https://code.jquery.com/jquery-3.1.0.min.js', type='text/javascript')
  script(src='/js/app.js', type='text/javascript')
